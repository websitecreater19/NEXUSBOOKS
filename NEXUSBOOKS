    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add to cart animation
            const addToCartButtons = document.querySelectorAll('.add-to-cart');
            const cartCount = document.querySelector('.cart-count');
            
            addToCartButtons.forEach(button => {
                button.addEventListener('click', function() {
                    // Store original content
                    const originalHTML = this.innerHTML;
                    
                    // Animation
                    this.innerHTML = '<i class="fas fa-check"></i> Added to Neural Storage';
                    this.style.background = 'linear-gradient(45deg, var(--matrix-green), var(--neon-blue))';
                    
                    // Update cart count
                    let count = parseInt(cartCount.textContent) || 0;
                    count++;
                    cartCount.textContent = count;
                    
                    // Pulsate cart count
                    cartCount.style.transform = 'scale(1.3)';
                    setTimeout(() => {
                        cartCount.style.transform = 'scale(1)';
                    }, 300);
                    
                    // Reset button after delay
                    setTimeout(() => {
                        this.innerHTML = originalHTML;
                        this.style.background = 'linear-gradient(45deg, var(--electric-purple), var(--cyber-pink))';
                    }, 2000);
                });
            });
            
            // Floating books animation
            const floatingBooks = document.querySelectorAll('.floating-book');
            floatingBooks.forEach((book, index) => {
                // Staggered animation
                book.style.animation = `float ${8 + index * 2}s infinite ease-in-out ${index * 0.5}s`;
            });
            
            // Background animation on scroll
            window.addEventListener('scroll', function() {
                const scrollPosition = window.scrollY;
                const hero = document.querySelector('.hero');
                hero.style.backgroundPositionY = `${scrollPosition * 0.5}px`;
                
                const shapes = document.querySelectorAll('.shape');
                shapes.forEach(shape => {
                    shape.style.transform = `translate(${scrollPosition * 0.05}px, ${scrollPosition * 0.05}px)`;
                });
            });
        });
    </script>
</body>
</html>
